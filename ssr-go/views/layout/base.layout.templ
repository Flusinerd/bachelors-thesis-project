package layout

import "ssr-go/components/nav"

templ Base(title string, component templ.Component) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<title>{ title }</title>
			<meta charset="utf-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1"/>
			<link rel="stylesheet" href="/public/css/styles.css"/>
		</head>
		<body>
			@navComponent.Nav()
			<main>
				@component
			</main>
		</body>
	</html>
}
